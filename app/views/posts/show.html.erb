<main class="main">
  <div class="inner">
  <div class="menu">
    <div class="modoru__btn">
      <%= link_to "戻る", "#", class: :modoru %> 
    </div>
    <% if current_user == @post.user %>
      <div class="modoru__btn">
        <%= link_to "編集",edit_post_path,class: :modoru %>
      </div>
      <div class="delete__btn">
        <%= link_to "削除",post_path , method: :delete , class: :modoru %>
      </div>
    <% end %>
  </div>
    <h4 class="title__show"><%= @post.title %></h4>
    <div class="note2">
      <div class="sen2">
        <p class="post_text"><%= @post.text %></p>
      </div>
      <div class="post_user_name">
        <a href="/users/<%= @post.user.id %>" , class="user_name">
          <%= @post.user.nickname %>
        </a>
      </div>
    </div>
    <%#= link_to @post.category.name, "#", class: :category_name %> 
  </div>
</main>
