<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">Log in</h2>
      <%= form_with model: @user, url: new_user_session_path, local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="field">
          <%= f.label :email,"E-mail" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: :sign_field %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password",class: :sign_field %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>