<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">Sign up</h2>
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :nickname, "Nick name" %><br />
          <%= f.text_field :nickname,class: :nickname_field %>
        </div>

        <div class="field">
          <%= f.label :email, "E-mail" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: :sign_field %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, placeholder:"6 characters or more",autocomplete: "new-password",class: :sign_field %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class: :sign_field %>
        </div>



        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
